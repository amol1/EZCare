<div class="row">
    <div class="col-md-12" ng-controller="ParentController" ng-init="fetchParent()">
        <div class="row" ng-repeat="child in Children">
            <div class="col-md-4">
                <img src="/{{child.name}}.png" style="margin:auto; width:150px;display:block" />
            </div>
            <div class="col-md-8">
                <h4>{{child.name}}</h4>
                <p>Age: {{child.age}}</p>
                <p>Condition: {{child.condition}}</p>
                <p>To view and edit details of care plan click <a href="Home/ChildPlan">here.</a></p>
            </div>
            <br /><br />
        </div>
    </div>
</div>
<br /><br />
<div class="row">
    <div class="col-md-12">
        <h4>Forums</h4>
        <p><a href="">Forum post 1 related to Arthritis, because Sally has this condition.</a></p>
        <p><a href="">Forum post 2 related to Physical therapy, because Sally sees provider of this type.</a></p>
    </div>
</div>

@section scripts {
    @Scripts.Render( "~/Scripts/angular.js" )
    @Scripts.Render( "~/Scripts/app/app.js" )
    @Scripts.Render( "~/Scripts/app/parent-controller.js" )
    @Scripts.Render( "~/Scripts/app/child-controller.js" )
}